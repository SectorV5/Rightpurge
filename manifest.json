{
  "manifest_version": 2,
  "name": "Straznik",
  "version": "1.0.3",
  "author": "Sectorfive",
  "icons": {
    "64": "icons/icon.png"
  },
  "background": {
    "scripts": [
      "background_script.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>",
    "tabs"
  ],
  "web_accessible_resources": [
    "blocked.html",
    "blocked.js",
    "icons/icon.png"
  ],
  "content_security_policy": "script-src 'self'; object-src 'none'",
  "browser_specific_settings": {}
}
